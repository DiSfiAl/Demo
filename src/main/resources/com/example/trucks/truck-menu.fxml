<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trucks.TruckMenuController" spacing="10" alignment="CENTER">
    <ListView fx:id="truckListView" onMouseClicked="#truckSelected" />
    <Button fx:id="addTruckButton" text="Add Truck" onAction="#addTruck" />
</VBox>
