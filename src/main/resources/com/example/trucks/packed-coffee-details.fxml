<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trucks.PackedCoffeeDetailsController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label fx:id="coffeeDetailsLabel"/>
    <HBox spacing="10">
        <Button text="Змінити кількість" onAction="#changeQuantity"/>
        <Button text="Видалити каву" onAction="#deleteCoffee"/>
    </HBox>
    <Button text="Close" onAction="#closeWindow"/>
</VBox>
