<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trucks.PackCoffeeController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Coffee Name"/>
    <TextField fx:id="coffeeNameField"/>
    <Label text="Sort"/>
    <TextField fx:id="sortField"/>
    <Label text="Type"/>
    <TextField fx:id="typeField"/>
    <Label text="Package Type"/>
    <TextField fx:id="packageTypeField"/>
    <Label text="Quantity"/>
    <TextField fx:id="coffeeQuantityField"/>
    <Button text="Pack Coffee" onAction="#packCoffee"/>
    <Label fx:id="statusLabel" textFill="red"/>
</VBox>
