<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coffee.DeleteCoffeeController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Delete Coffee"/>
    <TextField fx:id="coffeeNameField" promptText="Coffee Name"/>
    <TextField fx:id="sortField" promptText="Sort"/>
    <TextField fx:id="typeField" promptText="Type"/>
    <TextField fx:id="packageTypeField" promptText="Package Type"/>
    <Button text="Delete" onAction="#deleteCoffee"/>
    <Label fx:id="statusLabel" textFill="red"/>
</VBox>
