<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coffee.AddCoffeeController" hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Info About Coffee:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Label text="Coffee Name:" GridPane.rowIndex="1"/>
    <TextField fx:id="coffeeName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Manufacturer:" GridPane.rowIndex="2"/>
    <TextField fx:id="manufacturer" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Sort:" GridPane.rowIndex="3"/>
    <TextField fx:id="sort" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Type:" GridPane.rowIndex="4"/>
    <TextField fx:id="type" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Price (for 100g):" GridPane.rowIndex="5"/>
    <TextField fx:id="priceFor100G" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Coffee Weight (grams):" GridPane.rowIndex="6"/>
    <TextField fx:id="coffeeWeight" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Package Type:" GridPane.rowIndex="7"/>
    <TextField fx:id="packageType" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Term (months):" GridPane.rowIndex="8"/>
    <TextField fx:id="term" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label text="Grade Parameters:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <Label text="Coffee aroma:" GridPane.rowIndex="10"/>
    <TextField fx:id="aroma" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

    <Label text="Coffee flavor:" GridPane.rowIndex="11"/>
    <TextField fx:id="flavor" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

    <Label text="Coffee density:" GridPane.rowIndex="12"/>
    <TextField fx:id="density" GridPane.columnIndex="1" GridPane.rowIndex="12"/>

    <Label text="coffee acidity:" GridPane.rowIndex="13"/>
    <TextField fx:id="acidity" GridPane.columnIndex="1" GridPane.rowIndex="13"/>

    <Button text="Add Coffee" onAction="#handleAddCoffee" GridPane.columnIndex="0" GridPane.rowIndex="14" GridPane.columnSpan="2"/>
</GridPane>
